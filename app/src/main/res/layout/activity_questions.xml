<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/questions_layout"
    android:background="@drawable/color_fade_list"
    tools:context=".QuestionsActivity">

    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Future Question"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/answer_button_2"
        android:layout_width="315dp"
        android:layout_height="58dp"
        android:text="Answer 2"
        android:onClick="answer2Pressed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_text"
        app:layout_constraintVertical_bias="0.532" />

    <Button
        android:id="@+id/answer_button_1"
        android:layout_width="315dp"
        android:layout_height="58dp"
        android:text="Answer 1"
        android:onClick="answer1Pressed"
        app:layout_constraintBottom_toTopOf="@+id/answer_button_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.916" />

    <Button
        android:id="@+id/answer_button_3"
        android:layout_width="315dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:text="Answer 3"
        android:onClick="answer3Pressed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_button_2" />

    <Button
        android:id="@+id/answer_button_4"
        android:layout_width="315dp"
        android:layout_height="58dp"
        android:text="Answer 4"
        android:onClick="answer4Pressed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_button_3"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/answer_button_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_text"
        app:layout_constraintVertical_bias="0.717" />

    <Button
        android:id="@+id/return_to_start_button"
        android:layout_width="315dp"
        android:layout_height="58dp"
        android:text="Return to Start"
        android:onClick="returnToStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_button_4" />

</androidx.constraintlayout.widget.ConstraintLayout>